{
  "name": "accelerate-devex-book-club-tests",
  "version": "1.0.0",
  "description": "Playwright tests for Jekyll site refactoring confidence",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:ci": "playwright test",
    "test:percy": "percy exec -- playwright test",
    "test:percy-local": "percy exec -- playwright test --headed",
    "test:visual-only": "playwright test visual-regression.spec.js",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "keywords": [
    "playwright",
    "testing",
    "jekyll",
    "refactoring",
    "e2e"
  ],
  "author": "DevEx Book Club",
  "license": "MIT"
}
