{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jquery": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["html"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-alert": "warn",
    "indent": ["error", 2],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "no-trailing-spaces": "error",
    "eol-last": "error"
  },
  "globals": {
    "document": "readonly",
    "window": "readonly",
    "jekyll": "readonly",
    "$": "readonly",
    "jQuery": "readonly"
  },
  "settings": {
    "html/html-extensions": [".html", ".md"],
    "html/xml-extensions": [".xml"],
    "html/indent": "+2"
  },
  "ignorePatterns": [
    "docs/_site/**/*",
    "docs/vendor/**/*",
    "docs/node_modules/**/*",
    "docs/.jekyll-cache/**/*"
  ],
  "overrides": [
    {
      "files": ["**/*.html", "**/*.md"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-redeclare": "off"
      }
    },
    {
      "files": ["docs/_layouts/**/*.html", "docs/_includes/**/*.html"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-redeclare": "off",
        "no-implicit-globals": "off"
      }
    }
  ]
}
