{
  "$schema": "https://html-validate.org/schemas/config.json",
  "extends": ["html-validate:recommended"],
  "rules": {
    "no-trailing-whitespace": "warn",
    "attribute-boolean-style": "error",
    "attribute-empty-style": "error",
    "doctype-style": "error",
    "element-permitted-content": "warn",
    "element-required-attributes": "error",
    "id-pattern": ["warn", { "pattern": "kebabcase" }],
    "input-missing-label": "warn",
    "no-conditional-comment": "error",
    "no-deprecated-attr": "error",
    "no-inline-style": "warn",
    "no-redundant-for": "error",
    "no-redundant-role": "error",
    "prefer-native-element": "error",
    "script-type": "error",
    "valid-autocomplete": "error",
    "void-style": "error",
    "wcag/h32": "warn",
    "wcag/h37": "warn",
    "aria-label-misuse": "warn",
    "no-dup-id": "warn",
    "form-dup-name": "warn",
    "no-raw-characters": "off"
  },
  "elements": ["html5"],
  "transform": {
    "^.*\\.md$": "html-validate:document"
  }
}
