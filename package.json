{
  "name": "accelerate-devex-book-club-notebooklm",
  "version": "1.0.0",
  "description": "DevOps book club focused on Accelerate: The Science of Lean Software and DevOps",
  "main": "docs/assets/main.scss",
  "scripts": {
    "lint:css": "stylelint \"docs/assets/**/*.scss\" \"docs/_sass/**/*.scss\"",
    "lint:js": "eslint \"docs/**/*.js\" --ext .js,.html,.md",
    "lint:md": "markdownlint \"docs/**/*.md\" \"*.md\"",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:md",
    "test:html": "html-validate \"docs/_site/**/*.html\"",
    "test:css": "stylelint \"docs/assets/**/*.scss\" \"docs/_sass/**/*.scss\" \"docs/**/*.html\"",
    "test:js": "eslint \"docs/**/*.{js,html,md}\" --ext .js,.html,.md",
    "test:a11y": "pa11y-ci --sitemap http://localhost:4000/accelerate-devex-book-club-notebooklm/sitemap.xml",
    "test:links": "hyperlink \"docs/_site/**/*.html\"",
    "test:visual": "playwright test --config=playwright.config.js",
    "test:interactive": "playwright test tests/interactive-components.spec.js",
    "test:lighthouse": "lhci autorun",
    "test:jekyll-audit": "npx @brennanbrown/jekyll-audit audit",
    "test": "npm run lint && npm run test:html && npm run test:a11y",
    "audit": "npm run build && npm run test:jekyll-audit",
    "serve": "cd docs && bundle exec jekyll serve",
    "build": "cd docs && bundle exec jekyll build",
    "validate": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhenke/accelerate-devex-book-club-notebooklm.git"
  },
  "keywords": [
    "devops",
    "accelerate",
    "book-club",
    "dora-metrics",
    "jekyll"
  ],
  "author": "mhenke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mhenke/accelerate-devex-book-club-notebooklm/issues"
  },
  "homepage": "https://github.com/mhenke/accelerate-devex-book-club-notebooklm#readme",
  "devDependencies": {
    "@brennanbrown/jekyll-audit": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "@percy/cli": "^1.31.1",
    "@lhci/cli": "^0.12.0",
    "eslint": "^8.57.0",
    "eslint-plugin-html": "^7.1.0",
    "html-validate": "^8.7.4",
    "hyperlink": "^5.0.4",
    "markdownlint-cli": "^0.39.0",
    "pa11y-ci": "^3.1.0",
    "postcss-html": "^1.6.0",
    "stylelint": "^16.2.1",
    "stylelint-config-prettier": "^10.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 11"
  ]
}
