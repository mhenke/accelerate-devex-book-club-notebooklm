{
  "name": "accelerate-devex-book-club-testing",
  "version": "1.0.0",
  "description": "Testing suite for Jekyll-based DevOps book club site",
  "scripts": {
    "test": "npm run test:html && npm run test:css && npm run test:js && npm run test:a11y",
    "test:html": "html-validate \"_site/**/*.html\"",
    "test:css": "stylelint \"docs/assets/**/*.scss\" \"docs/**/*.html\"",
    "test:js": "eslint \"docs/**/*.{js,html}\" --ext .js,.html",
    "test:a11y": "pa11y-ci --sitemap http://localhost:4000/sitemap.xml",
    "test:links": "hyperlink \"_site/**/*.html\"",
    "test:visual": "playwright test --config=playwright.config.js",
    "test:interactive": "playwright test tests/interactive-components.spec.js",
    "test:lighthouse": "lhci autorun",
    "serve": "cd docs && bundle exec jekyll serve",
    "build": "cd docs && bundle exec jekyll build --destination ../_site",
    "validate": "npm run build && npm run test"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "eslint": "^8.56.0",
    "eslint-plugin-html": "^7.1.0",
    "html-validate": "^8.7.4",
    "stylelint": "^16.1.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "pa11y-ci": "^3.1.0",
    "hyperlink": "^5.0.4",
    "@lhci/cli": "^0.12.0",
    "@percy/cli": "^1.31.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 11"
  ]
}
