/*! Critical CSS - Optimized for above-the-fold content */

// 1. CRITICAL RESET & TYPOGRAPHY
// =============================
:root {
  --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
  --font-mono: 'Fira Code', monospace;
  --font-size-base: 16px;
  --line-height-base: 1.5;
  --transition-base: 0.2s ease;
}

// Critical font face declarations (preloaded in HTML <head>)
@font-face {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 400 700;
  font-display: swap;
  src: url('/assets/fonts/inter-var.woff2') format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}

// Critical reset
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

// Base typography
html {
  font-size: var(--font-size-base);
  line-height: var(--line-height-base);
  -webkit-text-size-adjust: 100%; /* stylelint-disable-line property-no-vendor-prefix */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
  max-width: 100vw;
}

body {
  font-family: var(--font-sans);
  background-color: var(--background-white, #ffffff);
  color: var(--text-primary, #1a1a1a);
  line-height: var(--line-height-base);
  overflow-x: hidden;
  max-width: 100vw;
  margin: 0;
  padding: 0;
}

// 2. CRITICAL LAYOUT
// =================
.site-header { 
  margin-bottom: 0;
  position: relative;
  z-index: 100;
}

#main-content { 
  margin-top: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.hero-banner {
  margin-top: 0;
  position: relative;
  overflow: hidden;
}

// 3. CRITICAL TYPOGRAPHY
// =====================
h1, h2, h3, h4, h5, h6 {
  margin-top: 0;
  margin-bottom: 0.5em;
  line-height: 1.2;
  font-weight: 700;
  color: var(--text-heading, #1a1a1a);
}

h1 { 
  font-size: var(--font-size-h1, 2.5rem);
  margin-bottom: 1rem;
}

h2 {
  font-size: var(--font-size-h2, 2rem);
  margin-bottom: 0.75rem;
}

// 4. CRITICAL UTILITIES
// ====================
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

// 5. CRITICAL ANIMATIONS
// =====================
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(20px); }
  to { transform: translateY(0); }
}

// 6. CRITICAL COMPONENTS
// =====================
// Moved to respective component files
// - Navigation
// - Buttons
// - Cards
// - Forms

// Non-critical typography moved to components/_typography.scss

h3 {
  @include heading-3;
}

h4 {
  @include heading-4;
}

h5 {
  @include heading-5;
}

h6 {
  @include heading-6;
}

p {
  font-size: var(--font-size-body);
  line-height: var(--line-height-normal);
  margin-bottom: var(--space-lg);

  &:last-child {
    margin-bottom: 0;
  }
}

a {
  color: var(--meeting-1-color);
  text-decoration: none;
  transition: color 0.3s ease-out;

  &:hover,
  &:focus {
    color: var(--accent-teal);
  }

  &:focus {
    @include focus-ring;
  }

  @include high-contrast {
    text-decoration: underline;
    font-weight: var(--font-weight-semibold);
  }
}

.skip-link {
  @include skip-link;
}

// Site header styles are in layout/_header.scss

// Font Awesome icon normalization
.fas,
.far,
[class^="fa-"],
[class*=" fa-"] {
  font-family: "Font Awesome 6 Free", "Font Awesome 6 Pro", "FontAwesome", sans-serif;
  font-style: normal;
  font-variant: normal;
  line-height: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.fas { font-weight: 900; }
.far { font-weight: 400; }

// Homepage sections

// Meeting themed buttons using data-meeting attribute system
[data-meeting] {
  .btn,
  .btn-primary {
    &:not(.btn--primary-action, .btn--secondary-action, .btn--meeting-nav) {
      background: linear-gradient(
        135deg,
        var(--theme-primary),
        var(--accent-teal)
      );
      box-shadow: var(--elevation-2);

      &:hover:not(:disabled) {
        background: linear-gradient(135deg, var(--accent-teal), var(--theme-primary));
        box-shadow: var(--elevation-4);
        transform: translateY(-1px);
      }

      &:focus-visible {
        outline: 3px solid var(--accent-coral);
        outline-offset: 2px;
      }

      &:active {
        transform: translateY(0);
        box-shadow: var(--elevation-2);
      }
    }
  }

  // Meeting-specific button base backgrounds

  // Meeting-specific button gradients using mixin
  .btn--meeting-1 {
    @include meeting-button-gradient(var(--meeting-1-color));
  }

  .btn--meeting-2 {
    @include meeting-button-gradient(var(--meeting-2-color), #2ea043);
  }

  .btn--meeting-3 {
    @include meeting-button-gradient(var(--meeting-3-color), #fbbf24);
  }

  .btn--meeting-4 {
    @include meeting-button-gradient(var(--meeting-4-color), #a78bfa);
  }

  // Icon color pattern: H2 uses theme primary, others gray
  h2:not(.key-question h2) {
    i,
    em {
      color: var(--theme-primary);
    }
  }
}

// =============================================================================
// LEARNING HIGHLIGHTS - WHAT YOU'LL LEARN SECTION
// =============================================================================


// Button focus states for accessibility
.btn:focus,
button:focus,
[role="button"]:focus {
  @include focus-ring;
}

// =============================================================================
// ACCESSIBILITY ENHANCEMENTS - CRITICAL
// =============================================================================

// Focus management
.focus-visible {
  outline: 3px solid var(--accent-teal) !important;
  outline-offset: 2px !important;
}


// Reduced motion support for critical animations
@include reduced-motion {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }

}



@media print {
  // Remove shadows and transitions for print
  * {
    box-shadow: none !important;
    transition: none !important;
    animation: none !important;
  }
}

// Homepage content sections



.next-meeting-complete__cta {
  background: linear-gradient(135deg, var(--purple-400), var(--purple-300));
  color: var(--purple-900);

  &:hover:not(:disabled) {
    background: linear-gradient(135deg, var(--purple-400), var(--purple-300));
    color: var(--purple-900);
    box-shadow: 0 6px 16px rgba(139, 92, 246, var(--opacity-40));
  }

  &:focus-visible {
    outline: 3px solid rgba(139, 92, 246, var(--opacity-40));
    outline-offset: 2px;
  }
}


