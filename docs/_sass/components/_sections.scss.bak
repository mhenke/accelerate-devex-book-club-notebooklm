// =============================================================================
// KEY QUESTION BANNER - Visually impactful meeting key question
// =============================================================================

.key-question-banner {
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
  padding: var(--space-xl) var(--space-lg);
  box-shadow:
    0 8px 24px rgba(var(--text-dark-rgb), 0.15),
    0 4px 12px rgba(var(--text-dark-rgb), 0.1);
  position: relative;
  overflow: hidden;

  // Mobile: Reduce padding significantly
  @include mobile-only {
    padding: var(--space-md) var(--space-sm); // 16px vertical, 8px horizontal
  }

  // Subtle gradient overlay
  &::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      circle at top right,
      rgba(var(--accent-blue-rgb), 0.1),
      transparent 60%
    );
    pointer-events: none;
  }

  .key-question-wrapper {
    position: relative;
    z-index: 1;
    margin: 0 auto;
  }

  .key-question-label {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--meeting-1-color);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: var(--space-sm);
    text-align: center;
    text-shadow: 0 2px 4px rgba(var(--text-dark-rgb), 0.3);
  }

  .key-question-intro {
    font-size: 1rem;
    color: rgba(var(--text-on-dark-rgb), 0.7);
    text-align: center;
    margin-bottom: var(--space-lg);
    font-style: italic;
    font-weight: 500;
  }

  .key-question-main {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: rgba(var(--text-on-dark-rgb), 0.05);
    border-radius: var(--radius-md);
    border: 1px solid rgba(var(--text-on-dark-rgb), 0.1);
    backdrop-filter: blur(10px);

    @include mobile-only {
      padding: var(--space-sm); // 8px on mobile
      gap: var(--space-xs); // 4px gap on mobile
    }
  }

  .quote-mark-start,
  .quote-mark-end {
    font-size: 2.8rem;
    font-weight: 700;
    color: var(--meeting-1-color);
    line-height: 0.8;
    flex-shrink: 0;
    opacity: 0.6;
    text-shadow: 0 2px 8px rgba(56, 139, 253, 0.4);
  }

  .quote-mark-start {
    align-self: flex-start;
    margin-top: -0.1em;
  }

  .quote-mark-end {
    align-self: flex-end;
    margin-bottom: -0.2em;
  }

  .question-text {
    font-size: var(--font-size-h5);
    font-weight: 500;
    color: #ffffff;
    line-height: var(--line-height-relaxed);
    text-align: center;
    flex: 1;
  }

  .key-question-context {
    color: var(--text-on-dark-high);
    font-size: var(--font-size-body);
    line-height: var(--line-height-relaxed);
    margin: var(--space-md) auto 0;
    text-align: center;
  }

  @include mobile-only {
    padding: var(--space-lg) var(--space-md);
    border-left-width: 4px;

    .key-question-label {
      font-size: var(--font-size-body);
      letter-spacing: 1px;
    }

    .key-question-intro {
      font-size: var(--font-size-body);
    }

    .key-question-main {
      flex-direction: column;
      gap: var(--space-sm);
      padding: var(--space-md);
    }

    .quote-mark-start,
    .quote-mark-end {
      font-size: var(--font-size-h2);
      align-self: center;
    }

    .question-text {
      font-size: var(--font-size-h4);
    }
  }
}

// =============================================================================
// RESOURCE CALLOUTS - Shared component for resources and meeting pages
// =============================================================================

.resource-callout-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--space-md);
  margin: var(--space-md) 0;

  @include mobile-only {
    grid-template-columns: 1fr;
    gap: var(--space-sm);
  }
}

.resource-callout {
  background: var(--background-white);
  padding: var(--space-md);
  border-radius: var(--radius-md);
  border: 1px solid var(--border-medium);
  transition: all 0.3s ease-out;

  &:hover {
    border-color: var(--accent-teal);
    box-shadow: var(--elevation-2);
    transform: translateY(-1px);
  }

  h3 {
    font-size: var(--font-size-h5);
    font-weight: var(--font-weight-semibold);
    color: var(--text-dark);
    margin: 0 0 var(--space-sm) 0;
    display: flex;
    align-items: center;
    gap: var(--space-sm);

    i,
    em {
      font-size: var(--font-size-h5);
      color: var(--accent-teal);
      font-style: normal;
      flex-shrink: 0;
    }
  }

  p {
    font-size: var(--font-size-body);
    color: #666;
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-sm);

    &:last-child {
      margin-bottom: 0;
    }
  }

  a.resource-link {
    color: var(--accent-teal);
    text-decoration: underline;
    font-weight: var(--font-weight-semibold);
    transition: color 0.2s ease-out;

    &:hover {
      color: var(--hover-teal);
    }
  }

  // Warning style variant (with orange/coral accent)
  &.warning-style {
    border-color: rgba(var(--accent-coral-rgb), 0.3);
    background: linear-gradient(
      135deg,
      rgba(var(--accent-coral-rgb), 0.05),
      rgba(var(--accent-coral-rgb), 0.02)
    );

    h3 i,
    h3 em {
      color: var(--accent-coral);
    }

    &:hover {
      border-color: var(--accent-coral);
    }
  }
}

