// =============================================================================
// SECTION COMPONENTS
// =============================================================================
// Reusable section layouts and content containers

// Base section card styling
.section-card {
  background: linear-gradient(
    135deg,
    rgba(var(--text-on-dark-rgb), 0.97),
    rgba(245, 245, 245, 0.95)
  );
  border: 2px solid rgba(var(--slate-gray-rgb), 0.3);
  border-radius: var(--radius-lg);
  padding: var(--space-lg) var(--space-md); // 24px vertical, 16px horizontal (reduced from 24px)
  margin: var(--space-lg) var(--space-md); // 16px horizontal margin (reduced from 24px)
  width: calc(100% - var(--space-xl)); // Account for reduced horizontal margins (32px total)
  max-width: none;
  box-shadow: 0 4px 12px rgba(var(--text-dark-rgb), 0.08);

  // Mobile: Reduce padding and margins significantly
  @include mobile-only {
    padding: var(--space-sm) var(--space-sm); // 8px all around
    margin: var(--space-sm) var(--space-xs); // 8px vertical, 4px horizontal
    width: calc(100% - var(--space-sm)); // Account for reduced horizontal margins (8px total)
  }

  &.no-border {
    border: none;
    box-shadow: none;
    background: transparent;
  }

  // (Removed) left-align modifier — not used in built HTML

  // Compact variant - tighter padding for dense content
  &.compact {
    padding: var(--space-md); // 16px

    @include mobile-only {
      padding: var(--space-xs); // 4px on mobile
    }
  }

  // Dark theme modifier - dark background with light text
  &.dark-theme {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    border: 1px solid rgba(var(--text-on-dark-rgb), 0.1);
    color: var(--text-light);
    padding: var(
      --space-sm
    ); // 8px - keeps current tight layout (TODO: consider increasing to space-md)

    @include mobile-only {
      padding: var(--space-xs); // 4px on mobile for even tighter layout
    }

    position: relative;
    overflow: hidden;

    // Subtle gradient overlay (matches key-question-banner)
    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(
        circle at top right,
        rgba(var(--accent-blue-rgb), 0.1),
        transparent 60%
      );
      pointer-events: none;
      z-index: 0;
    }

    // Ensure content is above the overlay
    > * {
      position: relative;
      z-index: 1;
    }

    // Override heading colors for dark theme (use simplified tokens)
    h1 {
      font-family: var(--font-display);
      font-size: var(--font-size-display); // 2.8rem
      font-weight: var(--font-weight-normal);
      line-height: 1.22;
      color: var(--text-white);
      margin-bottom: var(--space-lg);
    }

    h2 {
      font-family: var(--font-display);
      font-size: var(--font-size-h3); // 1.5rem - matches normal section-card
      font-weight: var(--font-weight-semibold); // matches normal section-card
      line-height: 1.25;
      margin-bottom: var(--space-md);
      display: flex;
      align-items: center;
      gap: var(--space-md);
      text-align: left;
      color: var(--text-white);

      i,
      em {
        font-size: var(--font-size-h3);
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-style: normal;
        border-radius: var(--radius-full);
        flex-shrink: 0;
        transition: all 0.3s ease;
        color: var(--accent-teal);
        background: linear-gradient(
          135deg,
          rgba(var(--accent-teal-rgb), 0.1),
          rgba(var(--theme-primary-rgb), 0.1)
        );
        border: 1px solid rgba(var(--accent-teal-rgb), 0.3);
      }

      &:hover i,
      &:hover em {
        color: var(--accent-emerald);
        background: linear-gradient(
          135deg,
          rgba(var(--theme-primary-rgb), 0.15),
          rgba(var(--accent-teal-rgb), 0.15)
        );
        border-color: rgba(var(--theme-primary-rgb), 0.4);
        transform: scale(1.05);
      }
    }

    h3 {
      font-size: var(--font-size-h3); // 1.5rem
      font-weight: var(--font-weight-medium);
      line-height: 1.29;
      margin-bottom: var(--space-sm);
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      color: var(--text-white);

      i {
        color: var(--accent-teal);
        flex-shrink: 0;
      }
    }

    h4 {
      font-size: var(--font-size-h4); // 1.375rem
      font-weight: var(--font-weight-medium);
      line-height: 1.4;
      margin-bottom: var(--space-sm);
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      color: rgba(var(--text-on-dark-rgb), 0.9);

      i {
        color: var(--accent-teal);
        flex-shrink: 0;
      }
    }

    h5 {
      font-family: var(--font-display);
      font-size: var(--font-size-h5); // 1.25rem
      font-weight: var(--font-weight-medium);
      color: rgba(var(--text-on-dark-rgb), 0.85);
      margin-bottom: var(--space-xs);
    }

    h6 {
      font-family: var(--font-display);
      font-size: var(--font-size-h6); // 1.125rem
      font-weight: var(--font-weight-medium);
      color: rgba(var(--text-on-dark-rgb), 0.8);
      margin-bottom: var(--space-xs);
    }

    p {
      color: rgba(var(--text-on-dark-rgb), 0.85);
      line-height: var(--line-height-relaxed);
    }
  }

  // Full-width modifier - no border-radius, spans full container
  &.full-width {
    width: 100%;
    margin-left: 0;
    margin-right: 0;
    border-radius: 0;
    padding: var(--space-lg);
  }

  // Action Items Modifier
  &.action-items {
    .action-header {
      margin-bottom: var(--space-lg);

      h2 {
        margin-bottom: var(--space-sm);
      }

      .subtitle {
        color: var(--text-muted);
        font-size: var(--font-size-body);
        margin: 0;
      }
    }

    .action-list {
      display: flex;
      flex-direction: column;
      gap: var(--space-md);
      margin-bottom: var(--space-lg);
    }

    .action-item {
      background: rgba(var(--text-on-dark-rgb), 0.05);
      border-radius: var(--radius-md);
    }

    .task-row {
      display: flex;
      align-items: flex-start;
      gap: var(--space-md);
    }

    .task-checkbox {
      flex-shrink: 0;
      color: var(--accent-emerald);
      font-size: var(--font-size-h4);
      line-height: 1;
      padding-top: 2px;

      i {
        display: block;
      }
    }

    .task-title {
      flex: 1;
      font-size: var(--font-size-body);
      line-height: 1.5;
      color: var(--text-primary);
    }

    .due-date {
      margin-top: var(--space-lg);
      padding: var(--space-md);
      background: var(--bg-emphasis);
      border-radius: var(--radius-md);
      border-left: 4px solid var(--accent-emerald);
      text-align: center;

      strong {
        color: var(--theme-primary);
        font-weight: var(--font-weight-semibold);
      }
    }
  }

  // Unified h2 styling for section-cards (matches dark-theme structure)
  h2 {
    font-family: var(--font-display);
    font-size: var(--font-size-h3); // 1.5rem
    font-weight: var(--font-weight-semibold);
    line-height: 1.25;
    margin: var(--space-md) 0 var(--space-sm) 0; // Standardized: 16px 0 8px 0
    display: flex;
    align-items: center;
    gap: var(--space-md);
    text-align: left;
    color: var(--theme-primary); // Only color difference from dark-theme

    i {
      font-size: var(--font-size-h3);
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-style: normal;
      border-radius: var(--radius-full);
      flex-shrink: 0;
      transition: all 0.3s ease;
      color: var(--accent-emerald);
      background: linear-gradient(
        135deg,
        rgba(var(--theme-primary-rgb), 0.1),
        rgba(var(--accent-teal-rgb), 0.1)
      );
      border: 1px solid rgba(var(--theme-primary-rgb), 0.3);
    }

    &:hover i {
      color: var(--accent-teal);
      background: linear-gradient(
        135deg,
        rgba(var(--accent-teal-rgb), 0.15),
        rgba(var(--theme-primary-rgb), 0.15)
      );
      border-color: rgba(var(--accent-teal-rgb), 0.4);
      transform: scale(1.05);
    }
  }
}

