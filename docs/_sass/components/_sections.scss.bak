  }

  .tool-demo a {
    color: var(--accent-teal);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
  }

  /* Icon column styles removed: .tool-icon class not used in templates; simplifies PurgeCSS output */
  @include mobile-only {
    .tool-card {
      flex-direction: column;
      align-items: stretch;
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .ai-spotlight, .tool-card { transition: none !important; }
  }
}

// Playlist / shared player styling — ensure audio controls fill container width
.playlist-player {
  width: 100%;
  
  // Make the native audio control expand to available width
  #shared-player,
  .playlist-player audio {
    width: 100% !important;
    max-width: 100% !important;
    display: block;
    box-sizing: border-box;
  }

  // Ensure the header and controls stack nicely on narrow screens
  .now-playing-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);

    @include mobile-only {
      flex-direction: column;
      align-items: stretch;
      gap: var(--space-sm);
    }
  }
}
