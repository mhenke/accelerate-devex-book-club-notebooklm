// =============================================================================
// ITEM-CARD - Unified Interactive Card Base Class (Placeholder)
// =============================================================================
// Base placeholder for all interactive cards within sections
// Provides consistent hover behavior, borders, and transitions

%item-card {
  background: var(--text-white);
  border: 1px solid var(--border-medium);
  border-top: 3px solid transparent;
  border-radius: var(--radius-md);
  cursor: pointer;
  transition:
    border-color 0.3s ease-out,
    border-top-color 0.3s ease-out,
    box-shadow 0.3s ease-out,
    transform 0.3s ease-out;
  position: relative;
  text-align: center;

  &:hover {
    border-top-color: var(--theme-primary, var(--accent-emerald));
    box-shadow:
      0 3px 6px rgba(var(--text-dark-rgb), 0.16),
      0 3px 6px rgba(var(--text-dark-rgb), 0.23);
    transform: translateY(-2px);

    i {
      transform: scale(1.1);
      color: var(--theme-primary, var(--accent-emerald));
    }
  }

  i {
    transition: all 0.3s ease-out;
  }

  // Dark theme modifier
  &.dark-theme {
    background: linear-gradient(135deg, #1a202c, #2d3748);
    border: 1px solid rgba(var(--text-on-dark-rgb), 0.1);
    color: white;
    box-shadow:
      0 4px 12px rgba(var(--text-dark-rgb), 0.25),
      0 2px 6px rgba(var(--text-dark-rgb), 0.15);

    &:hover {
      border-color: rgba(var(--text-on-dark-rgb), 0.15);
      border-top-color: var(--theme-primary, var(--accent-teal));
      box-shadow:
        0 8px 25px rgba(var(--text-dark-rgb), 0.35),
        0 4px 12px rgba(var(--text-dark-rgb), 0.25);
      transform: translateY(-3px);

      i {
        color: var(--theme-primary, var(--accent-teal));
      }
    }

    h3,
    p {
      color: white;
    }

    p {
      color: rgba(var(--text-on-dark-rgb), 0.85);
    }
  }

  // Simple mode modifier - simplified styling for get-started cards
  &.simple-mode {
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    text-align: center;
    border-top: none; // Remove the top border behavior for simple cards

    &:hover {
      border-top: none; // Keep no top border on hover
      transform: translateY(-2px);
      box-shadow:
        0 3px 6px rgba(var(--text-dark-rgb), 0.16),
        0 3px 6px rgba(var(--text-dark-rgb), 0.23);
    }

    h3 {
      margin: 0 0 var(--space-sm);
      font-size: var(--font-size-h5);
      font-weight: var(--font-weight-semibold);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-sm);

      i {
        font-size: var(--font-size-h4);
        transition: all 0.3s ease-out;
      }
    }

    p {
      color: #666;
      font-size: var(--font-size-body);
      margin-bottom: var(--space-md);
      line-height: var(--line-height-relaxed);
    }

    // Primary variant (colored background)
    &.primary {
      background: linear-gradient(
        135deg,
        var(--accent-emerald),
        var(--hover-emerald)
      );
      color: white;
      border: 1px solid transparent;

      h3,
      p {
        color: white;
      }

      &:hover {
        background: linear-gradient(
          135deg,
          var(--hover-emerald),
          var(--accent-emerald)
        );
      }
    }

    // Secondary variant uses default %item-card styling
    &.secondary {
      background: var(--light-gray-bg);
      border: 1px solid rgba(var(--theme-primary-rgb), 0.1);

      &:hover {
        background: #f1f5f9;
        border-color: rgba(var(--theme-primary-rgb), 0.2);
      }
    }
  }
}

// Chapter Overview Section - Matching Success Outcomes Pattern
.chapter-metrics-compact.section-card {
  background: var(--gradient-surface);
  border: 1px solid var(--border-medium);
  border-radius: var(--radius-lg);
  padding: var(--space-md); // 16px - compact variant
  margin: var(--space-lg) auto;
  width: 95%;
  max-width: none;
  text-align: center;
  box-shadow: var(--elevation-1);

  .chapters-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);

    @include mobile-only {
      grid-template-columns: 1fr;
      gap: var(--space-sm);
    }

    // When only 2 items (like metrics comparison), center them
    &:has(.chapter-item:nth-child(2):last-child) {
      grid-template-columns: repeat(2, 1fr);
      max-width: var(--text-max-width);
      margin-left: auto;
      margin-right: auto;
    }
  }

  .chapter-item {
    @extend %item-card;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-lg) var(--space-md);
    font-weight: var(--font-weight-medium);
    color: #666;
    min-height: 120px;
    font-size: var(--font-size-body);
    border: 2px solid rgba(var(--slate-gray-rgb), 0.5); // Make border more visible
    border-top: 3px solid rgba(var(--slate-gray-rgb), 0.5); // Visible default state

    i {
      font-size: var(--font-size-h6);
      color: #666;
      margin-bottom: var(--space-sm);
    }

    .chapter-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-xs);

      .chapter-number {
        font-size: var(--font-size-body);
        color: var(--text-dark); // Improved contrast - was text-light
        font-weight: var(
          --font-weight-semibold
        ); // Increased weight for better readability

        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .chapter-title {
        font-size: var(--font-size-body);
        color: #666;
        font-weight: var(--font-weight-semibold);
        text-align: center;
        line-height: var(--line-height-tight);
      }
    }

    .chapter-indicator {
      position: absolute;
      top: var(--space-sm);
      right: var(--space-sm);
      color: var(--theme-primary);
      font-size: var(--font-size-body);
      opacity: 0.6;
      transition: all 0.3s ease-out;

      i {
        margin-bottom: 0;
        font-size: var(--font-size-body);
      }
    }

    &:hover {
      .chapter-indicator {
        opacity: 1;
        transform: scale(1.1);
      }
    }

    &.active {
      border-top-color: var(--theme-primary);

      .chapter-indicator {
        transform: rotate(180deg);
        color: var(--accent-teal);
        opacity: 1;
      }
    }
  }

  .chapter-details {
    transition: all 0.5s ease-out;

    // Hidden attribute handling
    &[hidden] {
      display: none;
    }

    &:not([hidden]) {
      opacity: 1;
      transform: translateY(0);
    }

    .chapter-detail {
      text-align: left;
      background: rgba(var(--accent-blue-rgb), 0.05);
      border-radius: var(--radius-md);
      padding: var(--space-lg);
      display: none; // Hidden by default
      opacity: 0;
      transition: opacity 0.3s ease-out;

      // Hidden attribute handling for individual details
      &[hidden] {
        display: none;
      }

      // Show when active (used by JavaScript)
      &.active {
        display: block;
        opacity: 1;
      }

      h3 {
        color: var(--theme-primary);
        font-size: var(--font-size-h5);
        font-weight: var(--font-weight-semibold);
        margin-bottom: var(--space-md);
        display: flex;
        align-items: center;
        gap: var(--space-sm);

        i {
          color: var(--accent-coral);
        }
      }

      p {
        color: #666;
        font-size: var(--font-size-body);
        line-height: var(--line-height-relaxed);
        margin-bottom: var(--space-md);
      }

      ul {
        list-style: none;
        padding: 0;
        margin: 0;

        li {
          color: #666;
          font-size: var(--font-size-body);
          line-height: var(--line-height-relaxed);
          margin-bottom: var(--space-sm);
          padding-left: var(--space-lg);
          position: relative;

          &::before {
            content: "▶";
            color: var(--theme-primary);
            position: absolute;
            left: 0;
            top: 0;
          }

          &:last-child {
            margin-bottom: 0;
          }
        }
      }
    }
  }
}

// =============================================================================
// THE ALTERNATIVE: METRICS AS MIRRORS
// =============================================================================

// (Removed) alternative-section, alternative-header, alternative-grid, alternative-item, alternative-reminder — not used in built HTML

// (Removed) Common Pitfalls section and related card/grid styles were unused.

// Pulse glow animation for the icon
@keyframes pulse-glow {
  0%,
  100% {
    box-shadow: 0 4px 16px rgba(var(--accent-teal-rgb), 0.3);
    transform: scale(1);
  }
  50% {
    box-shadow: 0 4px 24px rgba(var(--accent-teal-rgb), 0.5);
    transform: scale(1.05);
  }
}

.choice-options {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  margin: var(--space-xl) 0; // increased top/bottom spacing for visual breathing room

  @include mobile-up {
    flex-wrap: wrap;
  }
}

.choice-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-sm);
  min-width: 180px;

  @include mobile-up {
    min-width: auto;
  }
}

.choice-circle {
  width: var(--space-3xl);
  height: var(--space-3xl);
  border-radius: 50%;
  border: 2px solid rgba(var(--text-on-dark-rgb), 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-h4);
  color: var(--text-white);
  background: rgba(var(--text-on-dark-rgb), 0.1);
  backdrop-filter: blur(10px);

  @include mobile-up {
    width: var(--space-2xl);
    height: var(--space-2xl);
    font-size: var(--font-size-h5);
  }
}

.choice-label {
  font-size: var(--font-size-h4);
  font-weight: var(--font-weight-bold);
  margin: 0;
  color: var(--text-white);
}

.choice-consequence {
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-normal);
  margin: 0;
  color: rgba(var(--text-on-dark-rgb), 0.8);
}

.vs-separator {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex-shrink: 0;
  padding-top: var(--space-xs);

  @include mobile-up {
    padding-top: var(--space-xs);
  }
}

.vs-circle {
  width: var(--space-2xl);
  height: var(--space-2xl);
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-black);
  color: var(--text-white);
  text-shadow: 0 2px 4px rgba(var(--text-dark-rgb), 0.3);
  box-shadow: 0 4px 16px rgba(var(--light-red-rgb), 0.4);
  animation: pulse-vs 2s ease-in-out infinite;
  letter-spacing: 1px;

  @include mobile-up {
    width: var(--space-xl);
    height: var(--space-xl);
    font-size: var(--font-size-body);
  }
}

@keyframes pulse-vs {
  0%,
  100% {
    transform: scale(1);
    box-shadow: 0 4px 16px rgba(var(--light-red-rgb), 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(var(--light-red-rgb), 0.6);
  }
}

// =============================================================================
// DEPLOYMENT SIGNAL & DISCUSSION QUESTIONS - Glassmorphic Callouts
// =============================================================================
// Matches key-question-main styling for visual consistency

.deployment-signal {
  padding: var(--space-lg);
  background: rgba(var(--text-on-dark-rgb), 0.05);
  border-radius: var(--radius-md);
  border: 1px solid rgba(var(--text-on-dark-rgb), 0.1);
  backdrop-filter: blur(10px);
  margin-bottom: var(--space-md);

  h4 {
    font-family: var(--font-display);
    font-size: var(--font-size-h4);
    font-weight: var(--font-weight-semibold);
    color: var(--text-white);
    margin: 0 0 var(--space-sm) 0;
  }

  p {
    color: rgba(var(--text-on-dark-rgb), 0.9);
    font-size: var(--font-size-body);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  &:last-child {
    margin-bottom: 0;
  }
}

.deployment-signal--spaced {
  margin-top: var(--space-2xl);
}

.discussion-questions-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
  margin-top: var(--space-lg);

  .deployment-signal {
    // Inherits all deployment-signal styles above
    transition: all 0.3s ease-out;

    &:hover {
      background: rgba(var(--text-on-dark-rgb), 0.08);
      border-color: rgba(var(--text-on-dark-rgb), 0.2);
      transform: translateY(-2px);
    }
  }
}

.false-choice-container {
  .false-choice-subtitle {
    font-size: var(--font-size-h6);
    color: rgba(var(--text-on-dark-rgb), 0.8);
    font-weight: var(--font-weight-medium);
    text-align: center;
    margin-bottom: var(--space-lg);
  }
}

// Causal Chain Container - Used within section-card
.causal-chain-container {
  margin: 0 auto;
}

.infographic-header {
  text-align: center;
  margin-bottom: var(--space-md);

  h2 {
    font-size: var(--font-size-h3); // 1.5rem - matches section-card
    font-weight: var(--font-weight-bold);
    color: var(--text-dark);

    // Uses standard h2 margin: 16px 0 8px 0
  }

  .research-foundation {
    font-size: var(--font-size-body);
    color: #666;
    margin: 0;
    line-height: 1.2;
  }
}

.causal-flow {
  display: flex;
  align-items: stretch;
  justify-content: center;
  gap: 0;
  margin: var(--space-2xl) 0;
  flex-wrap: nowrap;
  padding: var(--space-xl);
  background: linear-gradient(135deg, rgba(var(--accent-blue-rgb),0.04), rgba(var(--accent-teal-rgb),0.06), rgba(var(--theme-primary-rgb),0.04));
  border-radius: var(--radius-lg);
  border: 2px solid rgba(var(--accent-teal-rgb),0.2);
  box-shadow: 
    0 10px 40px rgba(var(--theme-primary-rgb),0.08),
    0 4px 16px rgba(var(--accent-blue-rgb),0.06);
  position: relative;
  overflow: visible;

  // Animated gradient overlay for depth
  &::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 0%, rgba(var(--accent-teal-rgb),0.1), transparent 70%);
    border-radius: var(--radius-lg);
    pointer-events: none;
    z-index: 0;
  }

  // Node cards (causal-step elements)
  .causal-step {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: var(--space-lg);
    background: linear-gradient(135deg, rgba(var(--text-on-dark-rgb),0.98), rgba(var(--text-on-dark-rgb),0.95));
    border-radius: var(--radius-md);
    border: 2px solid rgba(var(--slate-gray-rgb),0.3);
    box-shadow: 
      0 4px 16px rgba(var(--text-dark-rgb),0.08),
      0 2px 8px rgba(var(--text-dark-rgb),0.04);
    position: relative;
    z-index: 2;
    min-width: 200px;

    // Entrance animation
    opacity: 0;
    transform: translateY(20px) scale(0.95);
    animation: causal-node-enter 600ms cubic-bezier(0.34, 1.56, 0.64, 1) both;

    &:nth-child(1) { animation-delay: 100ms; }
    &:nth-child(2) { animation-delay: 200ms; }
    &:nth-child(3) { animation-delay: 300ms; }
    &:nth-child(5) { animation-delay: 400ms; }
    &:nth-child(7) { animation-delay: 500ms; }

    .step-content {
      width: 100%;
      text-align: center;
    }

    h3 {
      font-size: var(--font-size-h4);
      font-weight: var(--font-weight-bold);
      color: var(--theme-primary);
      margin: 0 0 var(--space-sm) 0;
      line-height: 1.3;
    }

    .step-chapter {
      font-size: var(--font-size-body);
      color: #666;
      font-weight: var(--font-weight-medium);
      margin-bottom: var(--space-md);
      opacity: 0.85;
    }

    .step-metrics {
      display: flex;
      flex-direction: column;
      gap: var(--space-xs);
      width: 100%;

      .metric-item {
        padding: var(--space-xs) var(--space-sm);
        background: linear-gradient(135deg, rgba(var(--accent-teal-rgb),0.08), rgba(var(--theme-primary-rgb),0.05));
        border-radius: var(--radius-sm);
        border: 1px solid rgba(var(--accent-teal-rgb),0.2);
        font-size: var(--font-size-small);
        font-weight: var(--font-weight-medium);
        color: #555;
      }
    }
  }

  // Arrow connectors with animated label
  .causal-arrow {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 var(--space-md);
    position: relative;
    z-index: 3;
    min-width: 80px;

    .arrow-label {
      position: relative;
      z-index: 1;
      padding: var(--space-xs) var(--space-sm);
      background: rgba(var(--text-on-dark-rgb),0.95);
      border: 1px solid rgba(var(--accent-teal-rgb),0.3);
      border-radius: var(--radius-sm);
      font-size: var(--font-size-small);
      font-weight: var(--font-weight-semibold);
      color: var(--accent-emerald);
      white-space: nowrap;
      box-shadow: 0 2px 8px rgba(var(--text-dark-rgb),0.08);
      text-transform: lowercase;
      letter-spacing: 0.3px;
    }
  }

  // Respect reduced motion
  @media (prefers-reduced-motion: reduce) {
    .causal-step {
      animation: none !important;
      transform: none !important;
      opacity: 1 !important;
    }
  }

  @include mobile-only {
    flex-direction: column;
    gap: var(--space-lg);
    padding: var(--space-md);
    align-items: stretch;

    .causal-step {
      width: 100%;
      min-width: 0;
    }

    .causal-arrow {
      min-width: 0;
      padding: var(--space-sm) 0;

      .arrow-label {
        font-size: var(--font-size-small);
      }
    }
  }
}

// Animations used by causal-flow
@keyframes causal-node-enter {
  from {
    opacity: 0;
    transform: translateY(20px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

// =============================================================================
// CONWAY'S LAW INTERNAL FLOW - Vertical flow within each Problem/Solution card
// =============================================================================

.conways-internal-flow {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0;
  width: 100%;
  margin-top: var(--space-md);
}

.conways-internal-step {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  
  .org-chart,
  .system-chart {
    width: 100%;
    background: rgba(var(--text-on-dark-rgb), 0.8);
    padding: var(--space-md);
    border-radius: var(--radius-md);
    border: 2px solid rgba(var(--slate-gray-rgb), 0.3);
    
    .org-label,
    .system-label {
      font-size: var(--font-size-small);
      font-weight: var(--font-weight-bold);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: #64748b;
      margin-bottom: var(--space-sm);
      text-align: center;
    }
    
    .team-list,
    .layer-list,
    .service-list {
      display: flex;
      flex-direction: column;
      gap: var(--space-xs);
      
      .team-item,
      .layer-item,
      .service-item {
        padding: var(--space-xs) var(--space-sm);
        background: linear-gradient(135deg, rgba(var(--slate-gray-rgb), 0.1), rgba(var(--slate-300-rgb), 0.08));
        border-radius: var(--radius-sm);
        border: 1px solid rgba(var(--slate-gray-rgb), 0.25);
        font-size: var(--font-size-small);
        font-weight: var(--font-weight-medium);
        color: #475569;
        text-align: center;
        
        &.cross-functional {
          background: linear-gradient(135deg, rgba(var(--theme-primary-rgb), 0.12), rgba(5, 150, 105, 0.08));
          border-color: rgba(var(--theme-primary-rgb), 0.3);
          
          strong {
            display: block;
            color: #065f46;
            margin-bottom: 2px;
          }
          
          small {
            font-size: var(--font-size-tiny);
            color: #059669;
            font-weight: var(--font-weight-normal);
          }
        }
        
        i {
          margin-right: var(--space-xs);
          color: #059669;
        }
      }
    }
  }
  
  .consequence-box {
    width: 100%;
    padding: var(--space-md);
    border-radius: var(--radius-md);
    font-size: var(--font-size-small);
    line-height: 1.5;
    text-align: center;
    
    &.negative {
      background: linear-gradient(135deg, rgba(var(--red-rgb), 0.1), rgba(220, 38, 38, 0.08));
      border: 2px solid rgba(var(--red-rgb), 0.3);
      color: #991b1b;
      
      strong {
        color: #7f1d1d;
      }
    }
    
    &.positive {
      background: linear-gradient(135deg, rgba(var(--theme-primary-rgb), 0.12), rgba(5, 150, 105, 0.08));
      border: 2px solid rgba(var(--theme-primary-rgb), 0.3);
      color: #065f46;
      
      strong {
        color: #064e3b;
      }
    }
  }
}

.conways-internal-arrow {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-md) 0;
  gap: var(--space-xs);
  
  i {
    font-size: var(--font-size-h3);
    color: #7adad1;
    animation: arrow-pulse 2s ease-in-out infinite;
  }
  
  .arrow-label {
    font-size: var(--font-size-small);
    font-weight: var(--font-weight-semibold);
    color: #475569;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
}

@keyframes arrow-pulse {
  0%, 100% {
    opacity: 1;
    transform: translateY(0);
  }
  50% {
    opacity: 0.6;
    transform: translateY(4px);
  }
}

