  background: linear-gradient(135deg, rgba(var(--text-on-dark-rgb),0.98), rgba(var(--text-on-dark-rgb),0.98));
  border: 1px solid rgba(var(--slate-gray-rgb),0.18);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  box-shadow: 0 8px 24px rgba(var(--accent-blue-rgb),0.03);
  display: block;

  .spotlight-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-sm);
  }

  .tool-card {
    display: flex;
    gap: var(--space-md);
    align-items: flex-start;
    background: linear-gradient(180deg, rgba(var(--text-on-dark-rgb),0.98), rgba(var(--text-on-dark-rgb),0.98));
    border-radius: var(--radius-md);
    border: 1px solid rgba(var(--slate-gray-rgb),0.08);
    padding: var(--space-md);
  }

  .tool-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    flex: 1 1 auto;
  }

  .tool-header h3 {
    margin: 0;
    font-size: var(--font-size-h4);
    color: var(--text-dark);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .tool-badge {
    display: inline-block;
    background: linear-gradient(90deg, rgba(var(--accent-teal-rgb),0.12), rgba(var(--theme-primary-rgb),0.06));
    color: var(--accent-emerald);
    border: 1px solid rgba(var(--accent-teal-rgb),0.22);
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    font-weight: var(--font-weight-semibold);
