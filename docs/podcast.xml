---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
     xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ site.title }} - Podcast</title>
    <description>{{ site.description }} - Audio podcast series covering DevOps transformation insights from the Accelerate book.</description>
    <link>{{ site.url }}{{ site.baseurl }}</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/podcast.xml" rel="self" type="application/rss+xml" />
    <language>en-us</language>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll {{ jekyll.version }}</generator>
    <managingEditor>{{ site.email | default: "contact@example.com" }} ({{ site.author | default: "Accelerate DevEx Book Club" }})</managingEditor>
    <webMaster>{{ site.email | default: "contact@example.com" }} ({{ site.author | default: "Accelerate DevEx Book Club" }})</webMaster>
    <copyright>{{ site.time | date: "%Y" }} {{ site.author | default: "Accelerate DevEx Book Club" }}</copyright>
    <image>
      <url>{{ site.url }}{{ site.baseurl }}/assets/images/podcast-logo.png</url>
      <title>{{ site.title }} Podcast</title>
      <link>{{ site.url }}{{ site.baseurl }}</link>
      <width>1400</width>
      <height>1400</height>
    </image>
    
    <!-- iTunes-specific tags -->
    <itunes:subtitle>DevOps Transformation Through Evidence-Based Practices</itunes:subtitle>
    <itunes:summary>{{ site.description }} This podcast series provides AI-generated audio content to supplement your reading of the Accelerate book, covering DORA metrics, continuous delivery, culture transformation, and leadership practices backed by research.</itunes:summary>
    <itunes:author>{{ site.author | default: "Accelerate DevEx Book Club" }}</itunes:author>
    <itunes:owner>
      <itunes:name>{{ site.author | default: "Accelerate DevEx Book Club" }}</itunes:name>
      <itunes:email>{{ site.email | default: "contact@example.com" }}</itunes:email>
    </itunes:owner>
    <itunes:image href="{{ site.url }}{{ site.baseurl }}/assets/images/podcast-logo.png"/>
    <itunes:category text="Business">
      <itunes:category text="Management"/>
    </itunes:category>
    <itunes:category text="Technology"/>
    <itunes:explicit>clean</itunes:explicit>
    <itunes:type>episodic</itunes:type>

    <!-- Meeting Episodes -->
    {% assign meetings = site.meetings | sort: 'week' %}
    {% for meeting in meetings %}
      {% assign podcast_file = 'meeting-' | append: meeting.week | append: '-podcast.m4a' %}
      {% assign podcast_path = '/assets/media/' | append: podcast_file %}
      {% assign full_podcast_url = site.url | append: site.baseurl | append: podcast_path %}
      
      <item>
        <title>{{ meeting.title | xml_escape }}</title>
        <description>{{ meeting.subtitle | xml_escape }} - {{ meeting.content | strip_html | truncatewords: 50 | xml_escape }}</description>
        <link>{{ site.url }}{{ site.baseurl }}{{ meeting.url }}</link>
        <guid isPermaLink="false">{{ site.url }}{{ site.baseurl }}{{ meeting.url }}</guid>
        <pubDate>{{ meeting.date | default: site.time | date_to_rfc822 }}</pubDate>
        <author>{{ site.email | default: "contact@example.com" }} ({{ site.author | default: "Accelerate DevEx Book Club" }})</author>
        
        <!-- Media enclosure for podcast -->
        <enclosure url="{{ full_podcast_url }}" type="audio/x-m4a" length="0"/>
        
        <!-- iTunes-specific episode tags -->
        <itunes:title>{{ meeting.title | xml_escape }}</itunes:title>
        <itunes:subtitle>{{ meeting.subtitle | xml_escape }}</itunes:subtitle>
        <itunes:summary>{{ meeting.subtitle | xml_escape }} - This episode covers chapters {{ meeting.chapters }} of Accelerate, focusing on {{ meeting.content | strip_html | truncatewords: 30 | xml_escape }}</itunes:summary>
        <itunes:author>{{ site.author | default: "Accelerate DevEx Book Club" }}</itunes:author>
        <itunes:duration>{{ meeting.duration | default: "20:00" }}</itunes:duration>
        <itunes:episode>{{ meeting.week }}</itunes:episode>
        <itunes:episodeType>full</itunes:episodeType>
        <itunes:explicit>clean</itunes:explicit>
        
        <!-- Media RSS for richer content -->
        <media:content url="{{ full_podcast_url }}" type="audio/x-m4a" medium="audio">
          <media:title>{{ meeting.title | xml_escape }}</media:title>
          <media:description>{{ meeting.subtitle | xml_escape }}</media:description>
          <media:keywords>devops, accelerate, dora metrics, continuous delivery, culture, transformation</media:keywords>
        </media:content>
      </item>
    {% endfor %}
  </channel>
</rss>
